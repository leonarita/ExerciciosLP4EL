@model IEnumerable<ProjetoPesquisaEstabelecimentoHospedagem.Models.Quarto>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Criar novo quarto", "Inserir")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NumeroQuarto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Disponivel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estabelecimento.NomeComercial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TipoQuarto.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroQuarto)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Disponivel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estabelecimento.NomeComercial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoQuarto.Descricao)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Alterar", new { id=item.IdQuarto }) |
            @Html.ActionLink("Excluir", "Excluir", new { id=item.IdQuarto })
        </td>
    </tr>
}

</table>
