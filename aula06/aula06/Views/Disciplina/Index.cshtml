@model IEnumerable<aula06.Models.Disciplina>

@{
    ViewBag.Title = "Index";
}

<h2>Listagem de disciplinas</h2>

<p>
    @Html.ActionLink("Criar nova disciplina", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Curso
        </th>
        <th>
            Professor
        </th>
        <th>
            Disciplina
        </th>
        <th>
            Créditos
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Curso.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Professor.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Creditos)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.IdDisciplina }) |
            @Html.ActionLink("Detalhar", "Details", new { id=item.IdDisciplina }) |
            @Html.ActionLink("Apagar", "Delete", new { id=item.IdDisciplina })
        </td>
    </tr>
}

</table>
