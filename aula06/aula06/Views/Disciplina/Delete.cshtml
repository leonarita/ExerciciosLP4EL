@model aula06.Models.Disciplina

@{
    ViewBag.Title = "Delete";
}

<h2>Apagar disciplina</h2>

<h3>Tem certeza que deseja deletar a disciplina?</h3>
<div>
    <h4>Disciplina</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Curso
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Curso.Descricao)
        </dd>

        <dt>
            Professor
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Professor.Nome)
        </dd>

        <dt>
            Disciplina
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt>
            Créditos
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Creditos)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Voltar", "Index")
        </div>
    }
</div>
