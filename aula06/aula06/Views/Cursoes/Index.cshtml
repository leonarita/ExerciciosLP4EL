@model IEnumerable<aula06.Models.Curso>

@{
    ViewBag.Title = "Index";
}

<h2>Listagem dos cursos</h2>

<p>
    @Html.ActionLink("Criar novo curso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Departamento
        </th>
        <th>
            Curso
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento.Descricao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descricao)
        </td>
        <td>
            @Html.ActionLink("Alterar", "Edit", new { id=item.IdCurso }) |
            @Html.ActionLink("Detalhes", "Details", new { id=item.IdCurso }) |
            @Html.ActionLink("Excluir", "Delete", new { id=item.IdCurso })
        </td>
    </tr>
}

</table>
